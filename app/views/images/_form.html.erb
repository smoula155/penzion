<%= form_for @image, url: images_path, html: { multipart: true } do |i| %>
   <div class="panel-body">
        <div class="form-group control-group">
          <div class="controls">
            <p> Obrázek </p>
            <%= i.file_field :picture ,  :required => true %>
          </div>
        </div>   
        <div class="form-group control-group">
          <div class="controls">
            <p> Apartmán </p>
            <%=  i.select :room_id, Room::TYPE_ROOMS,{}, {class: 'form-control'} %>
          </div>
        </div> 
        
        <div id="success"></div>
        <div class="form-group">
            <%= i.submit 'Přidej obrázek' , class:"btn btn-primary"%>
        </div>   
    </div>
<% end %>
            <!-- Map Column -->
            <div class="col-md-8">
                <!-- Embedded Google Map -->
                <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=49.9843953,17.313583617&amp;spn=49.9858764,17.2677366&amp;t=m&amp;z=15&amp;output=embed"></iframe>
            </div>
            <!-- Contact Details Column -->
            <div class="col-md-4">
                <h3>Kontaktní informace</h3>
                <p>
                    Dolní moravice<br> č.61<br>79501
                </p>
                <p><i class="fa fa-phone"></i>
                    <abbr title="Phone">Tel:</abbr>: +420 725 814 617</p>
                <p><i class="fa fa-envelope-o"></i>
                    <abbr title="Email">Email:</abbr>: <a href="mailto:martin.smolka67@gmail.com">martin.smolka67@gmail.com</a>
                </p>
            </div>
        </div>
        <!-- /.row -->

        <!-- Contact Form -->
        <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="row">
            <div class="col-md-8">
                <h3>Pošlete nám zprávu</h3>
                <%= form_tag send_mail_welcome_index_path, method: :post do %>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Celé jméno</label>
                            <%= text_field_tag :name,nil, {class:'form-control', type: 'text', :required => true }%>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Telefonní číslo</label>
                            <%= text_field_tag :phone,nil, {class:'form-control', type: 'tel', :required => true }%>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Vaše emailová adresa:</label>
                            <%= text_field_tag :email,nil, {class:'form-control', type: 'email', :required => true }%>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Zpráva:</label>
                            <%= text_area_tag :text, nil, {rows:"10",cols:"100", class:"form-control", :required => true, maxlength:"999", style:"resize:none"} %>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary"> Odeslat zprávu </button>
                <% end %>
            </div>

        </div>
        <!-- /.row -->

        <hr>

